<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".GenderActivity">

    <!-- Logo -->

    <!-- App Name (Fit Hit) -->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="201dp"
        android:layout_height="94dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="45dp"
        android:layout_height="57dp"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Fit"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appTitleAccent"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_alignBaseline="@id/appTitle"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/appTitle"
        android:text="Hit"
        android:textColor="#FFA500"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us know how we can help you"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Goal Selection Options -->
    <RadioGroup
        android:id="@+id/goalGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/subTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RadioButton
            android:id="@+id/radioWeightLoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight Loss"
            android:textSize="16sp"
            android:background="@drawable/radio_background"
            android:padding="12dp"
            android:buttonTint="@color/orange"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/radioSleepHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight Gain "
            android:textSize="16sp"
            android:background="@drawable/radio_background"
            android:padding="12dp"
            android:buttonTint="@color/black"
            android:textColor="#000000"/>


    </RadioGroup>

    <!-- Get Started Button -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goalGroup"
        android:layout_marginStart="20dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFA500"
        android:text="GET STARTED"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
