<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title of the Recommendation Page -->
        <TextView
            android:id="@+id/recommendationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Recommendations"
            android:textSize="24sp"
            android:textColor="#FFA500"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Bullet Points Section -->
        <TextView
            android:id="@+id/bulletPoint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:text=" Cardio , Squats, yoga, deadlifts, bench presses, and overhead presses"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bulletPoint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:text="Vegetables: (Garlic, Roma Tomatoes, Capers and Iceberg Lettuce); Protein Intake: (Cheese Standwish, Baru Nuts, Beech Nuts, Squash Seeds, and Mixed Teff); Juice: (Apple juice, beetroot juice and mango juice)"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bulletPoint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:text="Dumbbells, barbells and Blood glucose monitor"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bulletPoint4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="8dp"
            android:text="3 sets of 12-15 reps for each exercise"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Button to Return Home -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFA500"
            android:text="Go  to Home"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
